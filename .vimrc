set encoding=utf-8

syntax on
" Show line number
set nu
set ai
set cursorline
set hlsearch
set incsearch
set shiftwidth=4
set expandtab
set tabstop=4

filetype indent on

" Color Settings
set bg=dark
hi LineNr cterm=bold ctermfg=DarkGrey ctermbg=NONE
hi CursorLineNr cterm=bold ctermfg=Green ctermbg=NONE
